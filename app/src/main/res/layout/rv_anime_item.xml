<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:layout_marginBottom="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="?colorSurfaceVariant">

        <ImageView
            android:id="@+id/img_anime"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:src="@drawable/kiwi"
            android:scaleType="centerCrop"
            android:contentDescription="@string/anime_image" />

        <TextView
            android:id="@+id/tv_anime_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/img_anime"
            android:layout_marginStart="16dp"
            android:text="@string/title"
            android:textSize="18sp"
            android:textColor="?colorOnSurface"/>

        <!-- New TextView for the rating information -->
        <TextView
            android:id="@+id/tv_anime_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_anime_title"
            android:layout_toEndOf="@id/img_anime"
            android:layout_marginStart="16dp"
            android:text="TV"
            android:textSize="14sp"
            android:textColor="?colorOnSurfaceVariant"/>

        <!-- New TextView for the rating information -->
        <TextView
            android:id="@+id/tv_anime_season_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_anime_type"
            android:layout_toEndOf="@id/img_anime"
            android:layout_marginStart="16dp"
            android:text="WINTER 2020"
            android:textSize="14sp"
            android:textColor="?colorOnSurfaceVariant"/>

        <!-- New TextView for the rating information -->
        <TextView
            android:id="@+id/tv_anime_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_anime_season_year"
            android:layout_toEndOf="@id/img_anime"
            android:layout_marginStart="16dp"
            android:text="ONGOING"
            android:textSize="14sp"
            android:textColor="?colorOnSurfaceVariant"/>



    </RelativeLayout>

</androidx.cardview.widget.CardView>
