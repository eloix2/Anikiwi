<?xml version="1.0" encoding="utf-8"?>
<!-- dialog_layout.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rate_anime"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/purple_200"
        android:padding="10dp"
        android:gravity="center_horizontal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewRateStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status:"
            android:layout_alignBaseline="@+id/spinnerRateStatus"
            android:textSize="18sp"
            android:paddingEnd="8dp"
            android:paddingStart="10dp" />

        <Spinner
            android:id="@+id/spinnerRateStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="134dp" />

    </RelativeLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewEpisodes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Episodes:"
            android:textSize="18sp"
            android:paddingEnd="8dp"
            android:paddingStart="10dp"
            android:layout_alignBaseline="@id/editTextRateEpisodes"
            android:layout_alignTop="@id/editTextRateEpisodes"/>

        <EditText
            android:id="@+id/editTextRateEpisodes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0"
            android:padding="10dp"
            android:inputType="number"
            android:autofillHints="Episodes"
            android:layout_toEndOf="@id/textViewEpisodes" />

        <TextView
            android:id="@+id/textViewSlash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="18sp"
            android:paddingEnd="8dp"
            android:paddingStart="10dp"
            android:layout_alignBaseline="@id/editTextRateEpisodes"
            android:layout_alignTop="@id/editTextRateEpisodes"
            android:layout_toEndOf="@id/editTextRateEpisodes"/>

        <TextView
            android:id="@+id/textViewRateMaxEpisodes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="18sp"
            android:paddingEnd="8dp"
            android:paddingStart="10dp"
            android:layout_alignBaseline="@id/textViewSlash"
            android:layout_alignTop="@id/textViewSlash"
            android:layout_toEndOf="@id/textViewSlash"/>

    </RelativeLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewRateScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score:"
            android:layout_alignBaseline="@+id/spinnerRateScore"
            android:textSize="18sp"
            android:paddingEnd="8dp"
            android:paddingStart="10dp" />

        <Spinner
            android:id="@+id/spinnerRateScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="134dp" />
    </RelativeLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <!-- Add Starting Day -->
    <TextView
        android:id="@+id/textViewStartingDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Starting Day:"
        android:textSize="18sp"
        android:paddingEnd="8dp"
        android:paddingStart="10dp"
        android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/editTextStartingDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/textViewStartingDay"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:layout_toEndOf="@id/textViewStartingDay"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="@string/enter_date"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <!-- Add Finished Day -->
    <TextView
        android:id="@+id/textViewFinishedDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finished Day:"
        android:textSize="18sp"
        android:paddingEnd="8dp"
        android:paddingStart="10dp"
        android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/editTextFinishedDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/textViewFinishedDay"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:layout_toEndOf="@id/textViewFinishedDay"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="@string/enter_date"/>
    </RelativeLayout>

</LinearLayout>
