<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:layout_marginBottom="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="?colorSurfaceVariant">

        <ImageView
            android:id="@+id/img_rating"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:src="@drawable/kiwi"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/tv_rating_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/img_rating"
            android:layout_marginStart="16dp"
            android:text="Title"
            android:textSize="18sp"
            android:textColor="?colorOnSurface"/>

        <!-- New TextView for the rating information -->
        <TextView
            android:id="@+id/tv_rating_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_rating_title"
            android:layout_toEndOf="@id/img_rating"
            android:layout_marginStart="16dp"
            android:text="Rating: 9.0/10"
            android:textSize="14sp"
            android:textColor="?colorOnSurfaceVariant"/>

        <!-- New TextView for the rating information -->
        <TextView
            android:id="@+id/tv_rating_started"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_rating_score"
            android:layout_toEndOf="@id/img_rating"
            android:layout_marginStart="16dp"
            android:text="Started: 2020-01-01"
            android:textSize="14sp"
            android:textColor="?colorOnSurfaceVariant"/>

        <!-- New TextView for the rating information -->
        <TextView
            android:id="@+id/tv_rating_ended"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_rating_started"
            android:layout_toEndOf="@id/img_rating"
            android:layout_marginStart="16dp"
            android:text="Ended: 2020-01-02"
            android:textSize="14sp"
            android:textColor="?colorOnSurfaceVariant"/>

        <TextView
            android:id="@+id/tv_episode_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_rating_ended"
            android:layout_toEndOf="@id/img_rating"
            android:layout_alignBaseline="@id/btn_add_episode"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:text="Episodes: 10/24"
            android:textSize="16sp"
            android:textColor="?colorTertiary"/>

        <!-- Button to add 1 episode seen -->
        <Button
            android:id="@+id/btn_add_episode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_rating_ended"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:text="+1"
            android:textSize="14sp"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>
